<style media="screen">
  .images-wrapper { background-image: url("<%= @recipe.photo.url %>") }
</style>
<article class="type-system-traditional">
  <div class="side-image">
  <div class="images-wrapper"></div>
    <div class="side-image-content">
      <h4>Recipe</h4>
      <h1><%= @recipe.title %></h1>
      <p><%= @recipe.description %></p>
      <h2>Ingredients</h2>
      <ul class="recipe">
        <% @recipe.ingredients.each do |ingredient| %>
          <li class="recipe">
            <strong><%= ingredient.title %></strong><br>
            <%= ingredient.amount %>, <em><%= ingredient.prep_method %></em>
          </li>
        <% end %>
      </ul>
      <h2>Instructions</h2>
      <ul class="recipe">
        <% @recipe.instructions.each do |instruction| %>
          <li class="recipe">
            <strong><%= instruction.step %></strong><br>
            <%= instruction.instruction %>
          </li>
        <% end %>
      </ul>
      <p>
        <%= button_to "EDIT", edit_admin_recipe_path(:id => @recipe.id), method: :get %>
        <%= button_to "DELETE", admin_recipe_path(:id => @recipe.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
</article>
