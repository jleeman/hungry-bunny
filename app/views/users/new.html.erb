<% flash.each do |key, value| %>
  <div class="alert flash-<%= key %>"><%= value %></div>
<% end %>
<article class="type-system-traditional">
  <%= form_for @user, url: {action: "create"}, html: {class: "centered"} do |f| %>
    <h1>Register</h1>
    <%= f.label(:email, "Email:") %>
    <%= f.email_field :email %>
    <%= f.label(:password, "Password:") %>
    <%= f.password_field :password %>
    <%= f.label(:admin, "Admin:") %>
    <%= f.check_box :admin %><br>
    <%= f.submit "Create" %>
  <% end %>
</article>